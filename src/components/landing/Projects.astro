---
import projects from '../../config/projects.json';

---

<h2 class="font-bold text-3xl my-4">Projects</h2>

{
    projects.map(project => (
        <div class="flex flex-col md:flex-row  gap-4 md:gap-10">
            <div class="my-6">
                <h2 class="font-bold text-3xl my-2">{project.title}</h2>
                <p>{project.description}</p>
                <button class="bg-indigo-500 px-4 py-2 my-4 rounded-sm">Mas Info</button>
            </div>
            <div class="my-6">
                <img src={project.image} alt="" class="mx-auto w-36 md:w-80 " srcset="">    
            </div>    
        </div>
    ))
}